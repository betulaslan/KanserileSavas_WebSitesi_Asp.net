@model List<AnaSayfa>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}
<!doctype html>
<html lang="zxx">
<body>
    <!-- about breadcrumb -->
    <section class="w3l-about-breadcrumb text-left">
        <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
            <div class="container">
                <h2 class="title">Erken Tanı Hayat Kurtarır </h2>
                <ul class="breadcrumbs-custom-path mt-2">
                    <li><a href="/AnaSayfa/Index/">Ana Sayfa</a></li>
                    <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> Haberler </li>
                </ul>
            </div>
        </div>
    </section>
    <!-- //about breadcrumb -->
    <!--  Work gallery section -->
    <section class="grids-1 py-5">
        <div class="grids py-lg-5 py-md-4">
            <div class="container">
                <h3 class="hny-title mb-5">MAKALELER</h3>
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 col-md-4 col-6">
                            <div class="column" >
                                <a href="/AnaSayfa/Detay/@item.AnaSayfaID"><img src="@item.Resim" alt="" class="img-fluid" style="width:200px; height:200px;" ></a>
                                <div class="info">
                                    <h4><a href="blog-single.html">@item.Description</a></h4>
                                    <div class="dst-btm">
                                        <h6 class="">Kanser ile Savaş </h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>

    <link rel="stylesheet" href="~/Traversal-Liberty/assets/css/style-liberty.css" />
    <script src="~/Traversal-Liberty/assets/js/bootstrap.min.js"></script>
</body>

</html>