@using EntityLayer.Concrete
@model List<AnaSayfa>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Haberler</h1>
<table class="table table-bordered">
    <tr>
    <th>Başlık</th>
    <th>Resim</th>
    <th>Ön Yazı</th>
    <th>Sil</th>
    <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Baslik</td>
            <td>@item.Resim</td>
            <td>@item.Description</td>
            <td><a href="/Admin/AnaSayfa/DeleteDestination/@item.AnaSayfaID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Admin/AnaSayfa/UpdateAnaSayfa/@item.AnaSayfaID" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Admin/AnaSayfa/AddAnaSayfa" class="btn btn-outline-primary">Yeni Haber Ekle</a>
